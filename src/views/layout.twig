<head>

	<title>{{ pageTitle|raw }}</title>

	<meta charset="UTF-8" />
	<meta http-equiv="cleartype" content="on" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

	<!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->

	<link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/reset.css" />
    <link rel="stylesheet" media="screen" href="{{ app.request.baseUrl }}/css/Screen.css" />

    <script type="text/javascript" src="../js/jquery-1.9.1.js"></script>
	<script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>
	<script type="text/javascript" src="../js/manage.js"></script>

</head>
<body>

	<div id="siteWrapper">

		<header role="banner">
			<h1><a href="{{ app.request.baseUrl }}/">Rent My Tools</a></h1>
			<ul id = "Menu">
				<li><a href="{{ app.request.baseUrl }}/">Home</a></li>
				<li><a href="{{ app.request.baseUrl }}/rent">Rent</a></li>
				<li><a href="{{ app.request.baseUrl }}/manage">Manage</a></li>
				<li><a href="{{ app.request.baseUrl }}/about">About</a></li>
				<li><a href="{{ app.request.baseUrl }}/contact">Contact</a></li>
			</ul> 
			<form id="searchbar" action="{{ app.request.baseUrl }}/search" method="get">
				<input type="text" id="keyword" name="search">
				<input type="submit" value="Search" id="search-button"/>
			</form> 
			{% if app.user %}
				<div id='user'>
					<p>Welcome, {{app.user}} </p>
					<p><a href="{{ app.request.baseUrl }}/logout">Click here to log out.</a></p>
				</div>;
			{% endif %}

		</header>

		<!-- content -->
		<section role="main">

			{% block pageContent %}
				Hello!
			{% endblock %}

		</section>

		<footer role="contentinfo">&copy; 2014 &mdash; Rent My Tools</footer>

	</div>

</body>
</html>